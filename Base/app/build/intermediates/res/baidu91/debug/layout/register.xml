<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_interval"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mobile"
            android:textColor="@android:color/white"
            android:textScaleX="1.1"
            android:textSize="@dimen/standard_720x1280_32px" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
            android:background="@mipmap/input_box_bg"
            android:hint="@string/please_input_11_num"
            android:inputType="phone"
            android:paddingLeft="@dimen/standard_720x1280_register_margin"
            android:paddingTop="@dimen/padding_720x1080_10dp"
            android:paddingBottom="@dimen/padding_720x1080_10dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/standard_720x1280_32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_interval"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/verify_code"
            android:textColor="@android:color/white"
            android:textScaleX="1.1"
            android:textSize="@dimen/standard_720x1280_32px" />

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
            android:layout_marginRight="@dimen/standard_720x1280_register_verify_button_margin"
            android:background="@mipmap/verify_input_box"
            android:hint="@string/mobile_verify_code"
            android:inputType="number"
            android:paddingLeft="@dimen/standard_720x1280_register_margin"
            android:paddingTop="@dimen/padding_720x1080_10dp"
            android:paddingBottom="@dimen/padding_720x1080_10dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/standard_720x1280_32px" />

        <Button
            android:id="@+id/get_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/verify_button_normal"
            android:clickable="true"
            android:text="@string/send_verify_code"
            android:textColor="@drawable/white_to_bg_color_selector"
            android:textSize="@dimen/standard_720x1280_32px" />
    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_button_margin"
        android:background="@mipmap/login_button_normal"
        android:clickable="true"
        android:text="@string/next_step"
        android:textColor="@drawable/white_to_bg_color_selector"
        android:textSize="@dimen/standard_720x1280_32px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_720x1080_30dp"
        android:layout_marginTop="@dimen/standard_720x1280_register_button_checkbox_margin"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check"
            style="@style/custom_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_720x1280_register_checkbox_text_margin"
            android:text="@string/agreed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/standard_720x1280_32px" />

        <TextView
            android:id="@+id/tv_register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@drawable/common_text_color_to_white_selector"
            android:textSize="@dimen/standard_720x1280_32px" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Base/app/src/main/res/layout/register.xml -->