<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_color"
    android:paddingLeft="@dimen/standard_24px"
    android:paddingRight="@dimen/standard_24px"
    android:paddingTop="@dimen/standard_30px"
    android:paddingBottom="@dimen/standard_32px">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/standard_208px"
        android:layout_height="@dimen/standard_190px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:textSize="@dimen/standard_720x1280_30px"
        android:layout_marginLeft="@dimen/standard_24px"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/standard_24px"
        android:layout_marginTop="@dimen/standard_32px">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_bar"/>
        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_720x1280_24px"
            android:layout_marginTop="@dimen/standard_16px"
            android:layout_below="@+id/progressBar"
            android:textColor="@color/common_text_color"/>
        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_720x1080_10dp"
            android:textSize="@dimen/standard_720x1280_24px"
            android:layout_toRightOf="@+id/progressBar"
            android:textColor="@color/common_text_color"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_720x1280_24px"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/standard_24px"
        android:layout_above="@+id/b_control"
        android:layout_toRightOf="@+id/image"
        android:layout_marginBottom="@dimen/standard_38px"
        android:layout_marginTop="@dimen/standard_16px"
        android:textColor="@color/common_text_color"/>

    <Button
        android:id="@+id/b_control"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@mipmap/button_open"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/standard_24px"
        android:text="打开"
        android:visibility="gone"
        android:textSize="@dimen/standard_720x1280_24px"
        android:layout_alignBottom="@+id/image"
        android:textColor="@drawable/white_to_common_text_color_selector"/>
</RelativeLayout><!-- From: file:/D:/Base/app/src/main/res/layout/download_list_item.xml -->