<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_interval"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/nickname"
            android:textColor="@android:color/white"
            android:textScaleX="1.1"
            android:textSize="@dimen/font_size_720x1080_16sp"/>
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/input_box_bg"
            android:hint="@string/nickname_hint"
            android:paddingLeft="@dimen/standard_720x1280_register_margin"
            android:paddingTop="@dimen/padding_720x1080_10dp"
            android:paddingBottom="@dimen/padding_720x1080_10dp"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_720x1080_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_interval"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/password"
            android:textColor="@android:color/white"
            android:textScaleX="1.1"
            android:textSize="@dimen/font_size_720x1080_16sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/verify_button_selected"
            android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
            android:paddingLeft="@dimen/standard_720x1280_register_margin"
            android:paddingTop="@dimen/padding_720x1080_10dp"
            android:paddingBottom="@dimen/padding_720x1080_10dp">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_hint"
                android:background="@null"
                android:maxLength="18"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:textColor="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/font_size_720x1080_16sp" />
            <CheckBox
                android:id="@+id/visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/standard_720x1280_register_input_eye_margin_right"
                style="@style/visible_checkbox"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@mipmap/login_button_normal"
        android:layout_marginLeft="@dimen/standard_720x1280_register_margin"
        android:layout_marginRight="@dimen/standard_720x1280_register_margin"
        android:layout_marginTop="@dimen/standard_720x1280_register_input_button_margin"
        android:text="@string/complete_register"
        android:textColor="@drawable/white_to_bg_color_selector"
        android:textSize="@dimen/font_size_720x1080_16sp"/>
</LinearLayout><!-- From: file:/D:/Base/app/src/main/res/layout/complete_register.xml -->