<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingTop="@dimen/standard_720x1280_item_padding_top"
    android:paddingLeft="@dimen/standard_720x1280_item_padding_left"
    android:paddingRight="@dimen/standard_720x1280_item_padding_left">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/standard_720x1280_item_image_width"
        android:layout_height="@dimen/standard_720x1280_item_image_height"
        android:layout_marginBottom="@dimen/standard_720x1280_item_padding_bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:textSize="@dimen/standard_720x1280_30px"
        android:layout_marginLeft="@dimen/standard_720x1280_item_margin_left"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/title"
        android:textSize="@dimen/standard_720x1280_24px"
        android:layout_marginTop="@dimen/standard_720x1280_item_title_description_margin"
        android:layout_marginBottom="@dimen/standard_720x1280_item_description_buttons_margin"
        android:layout_marginLeft="@dimen/standard_720x1280_item_margin_left"
        android:lines="2"
        android:textScaleX="1.1"
        android:ellipsize="end"
        android:textColor="@color/hint_color"/>
    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginLeft="@dimen/standard_720x1280_item_margin_left">
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@mipmap/button_download">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_download"/>
            <TextView
                android:id="@+id/download_or_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:gravity="center"
                android:textSize="@dimen/standard_720x1280_24px"
                android:layout_marginLeft="@dimen/margin_720x1080_3dp"
                android:textColor="@drawable/white_to_bg_color_selector"/>
        </LinearLayout>
        <TextView
            android:id="@+id/open_or_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@mipmap/button_open"
            android:text="@string/open"
            android:gravity="center"
            android:textSize="@dimen/standard_720x1280_24px"
            android:layout_marginLeft="@dimen/margin_720x1080_3dp"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_720x1080_10dp"
            android:background="@mipmap/button_play">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_play"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:gravity="center"
                android:textSize="@dimen/standard_720x1280_24px"
                android:layout_marginLeft="@dimen/margin_720x1080_3dp"
                android:textColor="@drawable/white_to_bg_color_selector"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@mipmap/line"
        android:layout_below="@+id/image"/>
</RelativeLayout><!-- From: file:/D:/Base/app/src/main/res/layout/video_list_item.xml -->