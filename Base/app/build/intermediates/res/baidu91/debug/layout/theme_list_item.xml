<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_720x1080_10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image"
        android:alpha="0.3"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_720x1280_30px"
        android:paddingLeft="@dimen/standard_720x1280_theme_list_padding"
        android:paddingTop="@dimen/standard_720x1280_theme_list_padding"
        android:paddingBottom="@dimen/standard_720x1280_theme_list_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/image"
        android:textColor="@android:color/white"/>

</RelativeLayout><!-- From: file:/D:/Base/app/src/main/res/layout/theme_list_item.xml -->