<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_720x1280_theme_detail_shadow_height"
                android:layout_alignBottom="@+id/image"
                android:alpha="0.3"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/standard_720x1280_theme_detail_padding"
                android:paddingBottom="@dimen/standard_720x1280_theme_detail_padding"
                android:paddingTop="@dimen/standard_720x1280_theme_detail_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/standard_720x1280_30px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/standard_720x1280_theme_detail_padding_left_right"
            android:paddingRight="@dimen/standard_720x1280_theme_detail_padding_left_right"
            android:paddingTop="@dimen/standard_720x1280_theme_detail_banner_title_interval"
            android:paddingBottom="@dimen/standard_720x1280_theme_detail_title_line_interval"
            android:textScaleX="1.1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/standard_720x1280_26px" />
        <include layout="@layout/common_line" />

        <TextView
            android:id="@+id/tv_content_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/standard_720x1280_28px"
            android:textScaleX="1.1"
            android:text="@string/content_list"
            android:paddingTop="@dimen/standard_720x1280_theme_detail_line_list_interval"
            android:paddingLeft="@dimen/standard_720x1280_theme_detail_padding_left_right"
            android:paddingRight="@dimen/standard_720x1280_theme_detail_padding_left_right"/>

        <LinearLayout
            android:id="@+id/ll_theme_recommend_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
</ScrollView>